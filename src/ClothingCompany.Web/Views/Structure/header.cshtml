@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@model RenderingModel
@{
    var homeItem = Sitecore.Context.Database.GetItem(Sitecore.Context.Site.StartPath);
}
    <nav class="navbar is-light" role="navigation" aria-label="dropdown navigation">
        @* This Sitecore HTML Helper Method essentially is the equivalent of something like <Navigation /> in React, just a more verbose way of pulling in a component and requires additional set up such as setting up a Controller, any custom models for that Controller, and a View for that Controller to render out actual data *@
        @Html.Sitecore().ControllerRendering("Navigation", "Index")

        <div class="navbar-end">
            <div class="navbar-item">
                @Html.Sitecore().Field("__Display Name", homeItem, new { DisableWebEdit = true })
            </div>
        </div>
    </nav>