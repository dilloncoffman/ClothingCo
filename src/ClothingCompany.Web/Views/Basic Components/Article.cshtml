@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@model RenderingModel
@{
    // Think of as essentially defining your own props or Redux store state to pull in to use
    // This allows you to reference the content of the Author item from the Sitecore Content Tree
    var authorItem = ((Sitecore.Data.Fields.ReferenceField)Model.Item.Fields["Author"]).TargetItem;
}
<article class="media center">
    <figure class="media-left">
        <span class="image is-64x64">
            @Html.Sitecore().Field("Author Photo", authorItem, new { DisableWebEdit = true })
        </span>
    </figure>
    <div class="media-content">
        <div class="content">
            <h2 class="title is-6">Article Author: @Html.Sitecore().Field("Author Name", authorItem, new { DisableWebEdit = true })</h2>
            <h6 class="subtitle is-small">About the Author: <br /> @Html.Sitecore().Field("Author Bio", authorItem, new { DisableWebEdit = true })</h6>
        </div>
    </div>
</article>

<div class="section">
    <p class="has-text-gray">Posted: @Html.Sitecore().Field("Date Time")</p>
    <br />
    <p>@Html.Sitecore().Field("Primary Content Text")</p>
</div>